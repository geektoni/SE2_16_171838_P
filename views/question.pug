extends layout

block content
    div(class="row")
        div(class="col-md-12")
            h2 #{question}    
    div(class="row rating")
        div(class="col-md-12")
            button(class="btn btn-labeled btn-success")
                span(class="btn-label")
                    i(class="glyphicon glyphicon-thumbs-up")
                i #{rating.up}
            button(class="btn btn-labeled btn-danger")
                span(class="btn-label")
                    i(class="glyphicon glyphicon-thumbs-down")
                i #{rating.down}
    div(class="row")
        div(class="col-md-12")
            each tag in tags
                span(class="label label-info tags") #{tag}
            hr
    div(class="row")
        div(class="col-md-12")
            p(class="answer") #{answer}
            hr
    div(class="row text-center")
        div(class="col-md-12")
            if(voted)
                h3 Thanks for submitting your opinion!
            else
                form(class="form" method="POST" action="/questions/"+id+"/update")
                    label Did you find this answer useful?
                    br
                    button(type="submit", name="up", value="1", class="btn btn-default btn-lg btn-like")
                        span(class="glyphicon glyphicon-thumbs-up")
                    button(type="submit", name="down", value="1", class="btn btn-default btn-lg btn-like")
                        span(class="glyphicon glyphicon-thumbs-down")
                
    

